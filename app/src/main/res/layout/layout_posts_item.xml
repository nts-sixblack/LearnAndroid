<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="380dp"
                                                   android:layout_height="200dp" android:id="@+id/layoutItemPosts">

    <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp" tools:srcCompat="@tools:sample/avatars" android:id="@+id/imgPosts"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="32dp"/>
    <TextView
            android:text="TextView"
            android:layout_width="169dp"
            android:layout_height="37dp" android:id="@+id/txtCaption"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="37dp" android:layout_marginStart="22dp"
            app:layout_constraintStart_toEndOf="@+id/imgPosts"/>
    <TextView
            android:text="TextView"
            android:layout_width="166dp"
            android:layout_height="34dp" android:id="@+id/txtPostsUser"
            android:layout_marginTop="58dp"
            app:layout_constraintTop_toBottomOf="@+id/txtCaption" android:layout_marginStart="22dp"
            app:layout_constraintStart_toEndOf="@+id/imgPosts"/>
</androidx.constraintlayout.widget.ConstraintLayout>