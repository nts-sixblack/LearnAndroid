<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".UploadImageActivity">

    <Button
            android:text="FindPosts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/btnFindPosts"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"/>
    <Button
            android:text="Choose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/btnChooseImage"
            android:layout_marginTop="19dp"
            app:layout_constraintTop_toBottomOf="@+id/imgChoose" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="29dp"/>
    <ImageView
            android:layout_width="300dp"
            android:layout_height="300dp" android:id="@+id/imgChoose"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="28dp" android:layout_marginTop="107dp"
            app:layout_constraintTop_toBottomOf="@+id/edtCaption"/>
    <Button
            android:text="Upload"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/btnNewPosts"
            android:layout_marginTop="25dp"
            app:layout_constraintTop_toBottomOf="@+id/btnChooseImage" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="30dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/edtCaption"
            android:hint="Caption" android:layout_marginTop="17dp"
            app:layout_constraintTop_toBottomOf="@+id/btnFindPosts" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="15dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>