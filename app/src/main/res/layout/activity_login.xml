<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".LoginActivity">

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/edtUsernameLoginActivity"
            android:hint="Username" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="20dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="18dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/edtPasswordLoginActivity"
            android:hint="Password" android:layout_marginTop="17dp"
            app:layout_constraintTop_toBottomOf="@+id/edtUsernameLoginActivity"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="22dp"/>
    <Button
            android:text="Login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/btnLogin"
            android:layout_marginTop="23dp"
            app:layout_constraintTop_toBottomOf="@+id/edtPasswordLoginActivity"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="23dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>