<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".NewSongActivity">
    <Button
            android:text="start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/btnStartMusic"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="142dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="38dp"/>
    <Button
            android:text="stop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/btnStopMusic"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="142dp" android:layout_marginStart="146dp"
            app:layout_constraintStart_toEndOf="@+id/btnStartMusic"/>
</androidx.constraintlayout.widget.ConstraintLayout>